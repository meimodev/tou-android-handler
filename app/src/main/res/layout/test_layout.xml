<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_infoService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="visible"
        app:cardElevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:animateLayoutChanges="true"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp">

            <!--service id found-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_infoServiceType"
                        style="@style/TextView_IssueTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="8dp"
                        android:text="Service Type "
                        android:textColor="@color/TextView_Label_Dark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_infoServiceId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="8dp"
                        android:text="ID 24452" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="5dp"
                    android:animateLayoutChanges="true"
                    android:paddingEnd="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextView_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Atas Nama :" />

                        <TextView
                            style="@style/TextView_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pada Tanggal :" />

                        <TextView
                            style="@style/TextView_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Khadim :" />

                        <TextView
                            style="@style/TextView_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tempat :" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_infoName"
                            style="@style/TextView_label_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="JHON MANEMBO" />

                        <TextView
                            android:id="@+id/textView_infoDate"
                            style="@style/TextView_label_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="26 Agustus 2050" />

                        <TextView
                            android:id="@+id/textView_infoKhadim"
                            style="@style/TextView_label_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pdt. Jhon jhon" />

                        <TextView
                            android:id="@+id/textView_infoPlace"
                            style="@style/TextView_label_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kel. Jhonny Mambz" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <!--Loading-->
            <TextView
                android:id="@+id/textView_loading"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#fff"
                android:gravity="center"
                android:text="Mencari ID ..."
                android:textAlignment="gravity"
                android:translationZ="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Id Not Found-->
            <TextView
                android:id="@+id/textView_idNotFound"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/TextView_Default"
                android:gravity="center"
                android:text="ID TIDAK DI TEMUKAN -_-'"
                android:textAlignment="gravity"
                android:textColor="@color/ButtonText_LightGrey"
                android:textStyle="bold"
                android:translationZ="5dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>