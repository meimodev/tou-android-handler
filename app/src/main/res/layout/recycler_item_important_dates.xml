<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerItem_itemHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recyclerItem_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 30 \n Mar"
                android:textAlignment="center"
                android:textColor="@color/TextView_Label_Dark"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="0dp">

            <TextView
                android:id="@+id/recyclerItem_issueKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ibadah Pelayanan HUT"
                android:textColor="@color/TextView_Label_Light" />

            <TextView
                android:id="@+id/recyclerItem_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pukul 15.00"
                android:textColor="@color/TextView_Label_Light" />

            <TextView
                android:id="@+id/recyclerItem_issuedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pnt. 18"
                android:textAlignment="textEnd"
                android:textColor="@color/TextView_Label_Dark" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
