<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:animateLayoutChanges="true"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:cardElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.95">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_Title"
                    style="@style/TextView_IssueTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout_Main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/tv_Title"
                    app:layout_constraintTop_toBottomOf="@id/tv_Title">

                    <!--Switch Receive in Church-->
                    <Switch
                        android:id="@+id/switch_church"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:switchPadding="15dp"
                        android:text="Penerimaan di Gereja "
                        android:textColor="@color/TextView_Default" />

                    <Switch
                        android:id="@+id/switch_withDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:switchPadding="15dp"
                        android:text="Sertakan Perincian "
                        android:textColor="@color/TextView_Default"
                        android:visibility="gone" />

                    <!-- Amount Detail in "Received on Church"-->
                    <LinearLayout
                        android:id="@+id/layout_incomeDetailPlaceHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!--Pel-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Pelayanan"
                                app:endIconMode="clear_text">

                                <com.meimodev.sitouhandler.CustomWidget.CustomEditText
                                    android:id="@+id/editText_pelTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <Switch
                                android:id="@+id/switch_pelDetail"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical"
                                android:text="Rincikan"
                                android:textColor="@color/TextView_Label_Light" />

                        </LinearLayout>
                        <!--Pel PlaceHolder-->
                        <LinearLayout
                            android:id="@+id/layout_PelPlaceHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:visibility="gone">

                        </LinearLayout>
                        <!--Pem-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Pembangunan"
                                app:endIconMode="clear_text">

                                <com.meimodev.sitouhandler.CustomWidget.CustomEditText
                                    android:id="@+id/editText_pemTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <Switch
                                android:id="@+id/switch_pemDetail"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical"
                                android:text="Rincikan"
                                android:textColor="@color/TextView_Label_Light" />

                        </LinearLayout>
                        <!--Pem PlaceHolder-->
                        <LinearLayout
                            android:id="@+id/layout_PemPlaceHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:visibility="gone">

                        </LinearLayout>
                        <!--Extra-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Extra"
                                app:endIconMode="clear_text">

                                <com.meimodev.sitouhandler.CustomWidget.CustomEditText
                                    android:id="@+id/editText_extraTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <Switch
                                android:id="@+id/switch_extraDetail"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical"
                                android:text="Rincikan"
                                android:textColor="@color/TextView_Label_Light" />

                        </LinearLayout>
                        <!--Extra PlaceHolder-->
                        <LinearLayout
                            android:id="@+id/layout_extraPlaceHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:visibility="gone">

                        </LinearLayout>

                    </LinearLayout>
                    <!--EditText Amount-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Jumlah"
                        android:layout_marginBottom="4dp"
                        app:prefixText="Rp. "
                        app:prefixTextColor="@color/colorPrimary"
                        app:endIconMode="clear_text">

                        <com.meimodev.sitouhandler.CustomWidget.CustomEditText
                            android:id="@+id/editText_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <!--Details in SS-->
                    <LinearLayout
                        android:id="@+id/linearLayout_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/spinner_sampulSyukurType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.jaredrummler.materialspinner.MaterialSpinner>

                        <!--Atas Nama Button-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <com.meimodev.sitouhandler.CustomWidget.CustomButtonAdd
                                android:id="@+id/button_addName"
                                style="@style/Button_TambahNamaButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Atas Nama" />

                            <!--Names PlaceHolder-->
                            <LinearLayout
                                android:id="@+id/linearLayout_namePlaceHolder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:animateLayoutChanges="true"
                                android:orientation="vertical"
                                android:visibility="gone">

                            </LinearLayout>

                        </LinearLayout>

                        <com.meimodev.sitouhandler.CustomWidget.CustomButtonAdd
                            android:id="@+id/button_details"
                            style="@style/Button_TambahNamaButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tambah Perincian" />

                        <!--Details PlaceHolder-->
                        <LinearLayout
                            android:id="@+id/linearLayout_detailsPlaceHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical">

                        </LinearLayout>

                    </LinearLayout>
                    <!--Persembahan Ibadah-->
                    <LinearLayout
                        android:id="@+id/linearLayout_infoService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:hint="ID Ibadah"
                                app:endIconMode="clear_text"
                                android:layout_weight="1.5">

                                <com.meimodev.sitouhandler.CustomWidget.CustomEditText
                                    android:id="@+id/editText_findId"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:textAllCaps="true" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <!--Info Card About Related Service ID-->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView_infoService"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            android:animateLayoutChanges="true"
                            android:visibility="gone"
                            app:cardElevation="3dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:animateLayoutChanges="true"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:paddingBottom="10dp">

                                <!--service id found-->
                                <LinearLayout
                                    android:id="@+id/linearLayout_serviceInfoFound"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/textView_infoServiceType"
                                            style="@style/TextView_IssueTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="8dp"
                                            android:paddingTop="4dp"
                                            android:paddingBottom="4dp"
                                            android:text="Service Type "
                                            android:textAlignment="center"
                                            android:textColor="@color/TextView_Label_Dark"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/textView_infoServiceId"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginEnd="8dp"
                                            android:text="ID 24452" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:animateLayoutChanges="true"
                                        android:orientation="horizontal"
                                        android:paddingStart="5dp"
                                        android:paddingEnd="5dp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <TextView
                                                style="@style/TextView_label"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Atas Nama" />

                                            <TextView
                                                style="@style/TextView_label"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Tanggal" />

                                            <TextView
                                                style="@style/TextView_label"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Khadim" />

                                            <TextView
                                                style="@style/TextView_label"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Tempat" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/textView_infoName"
                                                style="@style/TextView_label_main"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="JHON MANEMBO" />

                                            <TextView
                                                android:id="@+id/textView_infoDate"
                                                style="@style/TextView_label_main"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="26 Agustus 2050" />

                                            <TextView
                                                android:id="@+id/textView_infoKhadim"
                                                style="@style/TextView_label_main"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Pdt. Jhon jhon" />

                                            <TextView
                                                android:id="@+id/textView_infoPlace"
                                                style="@style/TextView_label_main"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Kel. Jhonny Mambz" />

                                        </LinearLayout>


                                    </LinearLayout>

                                </LinearLayout>

                                <!--Loading-->
                                <LinearLayout
                                    android:id="@+id/linearLayout_progressHolder"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:background="#fff"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <TextView
                                        android:id="@+id/textView_loading"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:gravity="center"
                                        android:text="Mencari ID ..."
                                        android:textAlignment="gravity" />


                                </LinearLayout>

                                <!--Id Not Found-->
                                <TextView
                                    android:id="@+id/textView_idNotFound"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:background="@color/TextView_Default"
                                    android:gravity="center"
                                    android:text="ID Ibadah tidak valid"
                                    android:textAlignment="gravity"
                                    android:textColor="@color/ButtonText_LightGrey"
                                    android:textStyle="bold"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <!--Connection Problem-->
                                <LinearLayout
                                    android:id="@+id/layout_connectionProblem"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Koneksi internet anda sedang bermasalah\ncobalah sesaat lagi"
                                        android:textAlignment="center"
                                        android:textColor="@color/TextView_Label_Dark" />

                                </LinearLayout>


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <!--Other-->
                    <LinearLayout
                        android:id="@+id/linearLayout_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Catatan "
                            app:endIconMode="clear_text">

                            <com.meimodev.sitouhandler.CustomWidget.CustomEditText
                                android:id="@+id/editText_other_detail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <RadioGroup
                            android:id="@+id/radio_other"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="vertical">

                        </RadioGroup>

                    </LinearLayout>
                    <!--Other NO ACCOUNT-->
                    <LinearLayout
                        android:id="@+id/linearLayout_otherNoAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                    </LinearLayout>
                    <!--EditText Note-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:hint="Detil Penggunaan: "
                        app:endIconMode="clear_text"
                        android:layout_height="wrap_content">

                        <com.meimodev.sitouhandler.CustomWidget.CustomEditText
                            android:id="@+id/et_other_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:visibility="gone" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.meimodev.sitouhandler.CustomWidget.CustomButtonAdd
                    android:id="@+id/button_submit"
                    style="@style/Button_SubmitButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/tv_Title"
                    app:layout_constraintStart_toStartOf="@id/tv_Title"
                    app:layout_constraintTop_toBottomOf="@id/linearLayout_Main"
                    app:layout_constraintWidth_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/layout_progressHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>